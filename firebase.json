{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "runtime": "nodejs22"
  },
  "emulators": {
    "functions": { "host": "127.0.0.1", "port": 5002 },
    "firestore": { "host": "127.0.0.1", "port": 8081 },
    "ui": { "host": "127.0.0.1", "port": 4001 },
    "auth": { "host": "127.0.0.1", "port": 9099 }
  }
}
