{
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": true,
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@mesh/*": ["scripts/mesh/*"],
      "@vault/*": ["scripts/vault/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
